<section id="contact" class="relative py-20">
    <div class="container mx-auto px-6 max-w-2xl">
        <div
            class="bg-white/5 rounded-2xl p-8 backdrop-blur-lg border border-white/10"
        >
            <h2
                class="text-3xl font-bold mb-8 bg-gradient-to-r from-indigo-400 to-blue-500 bg-clip-text text-transparent text-center"
            >
                Trabajemos Juntos
            </h2>
            <form class="space-y-6">
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-300"
                        >Nombre</label
                    >
                    <input
                        type="text"
                        class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-gray-300 focus:outline-none focus:border-indigo-400"
                    />
                </div>
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-300"
                        >Email</label
                    >
                    <input
                        type="email"
                        class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-gray-300 focus:outline-none focus:border-indigo-400"
                    />
                </div>
                <div class="space-y-2">
                    <label class="text-sm font-medium text-gray-300"
                        >Mensaje</label
                    >
                    <textarea
