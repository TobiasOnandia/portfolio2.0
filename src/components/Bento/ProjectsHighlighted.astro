---
const proyectos = [
    {
        titulo: "Sistema de Agendas Médicas",
        descripcion:
            "Plataforma completa para gestión de turnos con integración WhatsApp",
        tecnologias: ["Next.js", "Supabase", "TypeScript", "Mercado Pago"],
        enlaces: [
            { texto: "Demo →", url: "#" },
            { texto: "Código", url: "#" },
        ],
    },
    {
        titulo: "Sistema de Facturación AFIP",
        descripcion:
            "Integración con Facturante y API de AFIP para facturación electrónica",
        tecnologias: ["Node.js", "React", "PostgreSQL", "JWT"],
        enlaces: [{ texto: "Caso de Estudio →", url: "#" }],
    },
];
import RayIcon from "../icons/RayIcon.astro";
---

<section
    class="p-8 rounded-xl bg-gradient-to-br from-indigo-500/20 to-purple-500/20 col-span-2 lg:col-span-1 border border-white/10 backdrop-blur-lg hover:shadow-lg transition-shadow"
>
    <h2
        class="text-xs font-semibold rounded-full bg-indigo-400 text-white w-fit px-4 py-2 mb-6 flex items-center gap-2 uppercase tracking-wide"
    >
        <RayIcon />
        Proyectos Destacados
    </h2>

    <ul class="space-y-4">
        {
            proyectos.map((proyecto) => (
                <li class="group relative pl-4 hover:pl-6 transition-all">
                    <div class="absolute left-0 top-3 w-2 h-2 bg-indigo-400 rounded-full" />
                    <article class="border-l-2 border-indigo-400/20 pl-4">
                        <h3 class="font-medium text-gray-100 group-hover:text-indigo-300 transition-colors">
                            {proyecto.titulo}
                        </h3>
                        <p class="text-gray-400 text-sm mb-2">
                            {proyecto.descripcion}
                        </p>
                        <ul class="flex flex-wrap gap-2">
                            {proyecto.tecnologias.map((tech) => (
                                <li class="px-2 py-1 text-xs bg-white/5 rounded-full border border-white/10 text-gray-300 hover:bg-indigo-500/20 hover:border-indigo-400/30 transition-colors">
                                    {tech}
                                </li>
                            ))}
                        </ul>
                        <footer class="mt-2 flex gap-3">
                            {proyecto.enlaces.map((link) => (
                                <a
                                    href={link.url}
                                    class="text-indigo-400 text-sm hover:underline"
                                >
                                    {link.texto}
                                </a>
                            ))}
                        </footer>
                    </article>
                </li>
            ))
        }
    </ul>
</section>
