---
import CheckIcon from "../icons/CheckIcon.astro";

const habilidades = [
  {
    titulo: "Integración de APIs",
    tecnologias: [
      "WhatsApp Business",
      "Mercado Pago",
      "Brevo",
      "Facturante",
      "AFIP",
    ],
  },
  {
    titulo: "Testing",
    tecnologias: ["Vitest", "Playwright "],
  },
  {
    titulo: "Gestión de Estado",
    tecnologias: ["Context API", , "Zustand"],
  },
  {
    titulo: "Diseño Responsivo",
    tecnologias: ["Tailwind CSS", "Framer Motion", "Figma"],
  },
];
---

<section
  class="p-8 rounded-xl bg-white/5 border border-white/10 backdrop-blur-lg col-span-2 lg:col-span-2 hover:shadow-lg transition-shadow"
>
  <h2 class="text-2xl font-bold mb-6 text-emerald-400 flex items-center gap-3">
    <CheckIcon />
    Habilidades Complementarias
  </h2>

  <section class="flex flex-wrap gap-4">
    {
      habilidades.map(({ titulo, tecnologias }) => (
        <article class="p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-colors w-full sm:w-1/2 lg:w-1/4">
          <h3 class="text-emerald-400 font-medium mb-2">{titulo}</h3>
          <ul class="text-gray-300 text-sm space-y-1">
            {tecnologias.map((tech) => (
              <li>{tech}</li>
            ))}
          </ul>
        </article>
      ))
    }
  </section>
</section>
