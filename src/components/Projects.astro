---
import Project from "./Project.astro";
---

<section id="projects" class="py-8 mt-14 rounded-xl">
    <div class="container mx-auto px-6">
        <h2
            class="text-3xl font-bold mb-12 bg-gradient-to-r from-indigo-400 to-blue-500 bg-clip-text text-transparent"
        >
            Proyectos Destacados
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Tarjeta de Proyecto -->
            <article
                class="bg-white/5 rounded-xl overflow-hidden border border-white/10 hover:border-indigo-400/30 transition-all"
            >
                <div class="relative overflow-hidden h-48">
                    <img
                        src="/agendatex.webp"
                        alt="Sistema Médico"
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="px-4 py-2 rounded-full w-full justify-between flex bg-indigo-500/20 border border-indigo-400/30 hover:bg-indigo-500/30 transition-colors"
                    >
                        <a
                            href="https://agendatex.vercel.app/"
                            class="absolute inset-0 left-4 bg-black/80 flex items-center justify-center gap-4 opacity-0 hover:opacity-100 transition-opacity"
                            >Demo</a
                        >
                        <a
                            href="https://github.com/TobiasOnandia/agendatex"
                            class="absolute inset-0 bg-black/80 flex items-center justify-center gap-4 opacity-0 hover:opacity-100 transition-opacity"
                            >Código</a
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">
                        Sistema de Agendas Médicas
                    </h3>
                    <p class="text-gray-400 text-sm mb-4">
                        Plataforma completa para gestión de turnos médicos con
                        integración de WhatsApp
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Next.js</span
                        >
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Supabase</span
                        >
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >TypeScript</span
                        >
                    </div>
                </div>
            </article>

            <article
                class="bg-white/5 rounded-xl overflow-hidden border border-white/10 hover:border-indigo-400/30 transition-all"
            >
                <div class="relative overflow-hidden h-48">
                    <img
                        src="/duo.webp"
                        alt="Tienda de ropa de Duo"
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="px-4 py-2 rounded-full w-full justify-between flex bg-indigo-500/20 border border-indigo-400/30 hover:bg-indigo-500/30 transition-colors"
                    >
                        <a
                            href="https://duo-plum.vercel.app/"
                            class="absolute inset-0 left-4 bg-black/80 flex items-center justify-center gap-4 opacity-0 hover:opacity-100 transition-opacity"
                            >Demo</a
                        >
                        <a
                            href="https://github.com/TobiasOnandia/duo"
                            class="absolute inset-0 bg-black/80 flex items-center justify-center gap-4 opacity-0 hover:opacity-100 transition-opacity"
                            >Código</a
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">
                        Tienda de ropa de Duo indumentaria
                    </h3>
                    <p class="text-gray-400 text-sm mb-4">
                        Plataforma para la compra de ropa de Duo con integracion
                        a whatsapp, mercado pago y emails
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Next.js</span
                        >
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Supabase</span
                        >
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >TypeScript</span
                        >
                    </div>
                </div>
            </article>
            <article
                class="bg-white/5 rounded-xl overflow-hidden border border-white/10 hover:border-indigo-400/30 transition-all"
            >
                <div class="relative overflow-hidden h-48">
                    <img
                        src="/axis.webp"
                        alt="Tienda de ropa de Duo"
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="px-4 py-2 rounded-full w-full justify-between flex bg-indigo-500/20 border border-indigo-400/30 hover:bg-indigo-500/30 transition-colors"
                    >
                        <a
                            href="https://axis-six.vercel.app/"
                            class="absolute inset-0 bg-black/80 flex items-center justify-center gap-4 opacity-0 hover:opacity-100 transition-opacity"
                            >Demo</a
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3 class="text-xl font-semibold mb-2">
                        Landing page Axis
                    </h3>
                    <p class="text-gray-400 text-sm mb-4">
                        landing page de el grupo de Axis team creado con Astro y
                        tailwindcss
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Astro</span
                        >
                        <span
                            class="px-3 py-1 text-xs bg-white/5 rounded-full border border-white/10"
                            >Tailwindcss</span
                        >
                    </div>
                </div>
            </article>

            <!-- Repetir para otros proyectos -->
        </div>
    </div>
</section>
