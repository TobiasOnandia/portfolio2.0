---
import Laptop from "../components/icons/Laptop.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
import File from "../components/icons/File.astro";
---

<section class="px-4 min-h-[50vh] flex items-center">
    <div class="relative z-10">
        <div class="space-y-6 md:space-y-8">
            {/* Encabezado principal con animación sutil */}
            <h1
                class="text-5xl flex flex-col md:text-7xl font-bold tracking-tight leading-tight animate-animate-fade-in-up"
            >
                <span
                    class="bg-gradient-to-r from-indigo-400 to-blue-500 bg-clip-text text-transparent"
                >
                    Hola, soy
                </span>
                <span
                    class="bg-gradient-to-r from-indigo-200 via-blue-300 to-indigo-400 bg-clip-text text-transparent"
                >
                    Tobias Onandia
                </span>
            </h1>

            <p
                class="text-2xl md:text-4xl font-medium text-gray-300 animate-slide-up delay-100"
            >
                <span class="text-gray-400">Desarrollador Full Stack</span>
            </p>
            <p
                class="text-2xl text-balance md:text-4xl font-medium text-gray-300 animate-slide-up delay-100"
            >
                <span class="text-indigo-400">especializado en</span>
                <span
                    class="w-fit bg-gradient-to-r from-purple-400 to-indigo-500 bg-clip-text text-transparent font-semibold border-b-2 border-indigo-500/30 animate-underline"
                >
                    Next.js & TypeScript
                </span>
            </p>

            {/* Badge disponibilidad con efecto neón */}
            <span
                class="text-sm w-fit flex items-center gap-3 font-medium bg-gradient-to-r from-green-400/80 to-green-600/80 bg-clip-text text-transparent px-3 py-1.5 rounded-full bg-black/20 backdrop-blur-lg border border-green-400/20"
            >
                <span class="relative flex h-3 w-3">
                    <span
                        class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400/80 opacity-75"
                    ></span>
                    <span
                        class="relative inline-flex rounded-full h-3 w-3 bg-gradient-to-br from-green-400 to-green-600"
                    ></span>
                </span>
                Disponible para trabajar
            </span>

            {/* Botones con efecto hover glass */}
            <div class="flex flex-wrap gap-4 mt-8">
                <a
                    href="#projects"
                    class="flex items-center gap-2 px-6 py-3 rounded-full
                       bg-white/5 backdrop-blur-sm border border-white/10
                       text-gray-300 hover:text-white hover:bg-white/10
                       hover:border-indigo-400/30 transition-all
                       duration-300 text-sm font-medium group"
                >
                    <span
                        class="w-5 h-5 flex items-center group-hover:text-indigo-400 transition-colors"
                    >
                        <Laptop />
                    </span>
                    <span>Proyectos</span>
                </a>
                <a
                    href="https://linkedin.com"
                    class="flex items-center gap-2 px-6 py-3 rounded-full
                       bg-white/5 backdrop-blur-sm border border-white/10
                       text-gray-300 hover:text-white hover:bg-white/10
                       hover:border-indigo-400/30 transition-all
                       duration-300 text-sm font-medium group"
                >
                    <span
                        class="w-5 h-5 flex items-center group-hover:text-indigo-400 transition-colors"
                    >
                        <LinkedIn />
                    </span>
                    <span>LinkedIn</span>
                </a>
                <a
                    href="https://github.com"
                    class="flex items-center gap-2 px-6 py-3 rounded-full
                       bg-white/5 backdrop-blur-sm border border-white/10
                       text-gray-300 hover:text-white hover:bg-white/10
                       hover:border-indigo-400/30 transition-all
                       duration-300 text-sm font-medium group"
                >
                    <span
                        class="w-5 h-5 flex items-center group-hover:text-indigo-400 transition-colors"
                    >
                        <GitHub />
                    </span>
                    <span>GitHub</span>
                </a>
                <a
                    href="#cv"
                    download=""
                    class="flex items-center gap-2 px-6 py-3 rounded-full
                       bg-white/5 backdrop-blur-sm border border-white/10
                       text-gray-300 hover:text-white hover:bg-white/10
                       hover:border-indigo-400/30 transition-all
                       duration-300 text-sm font-medium group"
                >
                    <span
                        class="w-5 flex items-center h-5 group-hover:text-indigo-400 transition-colors"
                    >
                        <File />
                    </span>
                    <span>Descargar CV</span>
                </a>
            </div>
        </div>
    </div>

    {/* Efecto de fondo para el hero */}
    <div class="absolute inset-0 -z-10">
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:24px_24px] opacity-10"
        >
        </div>
        <div
            class="absolute inset-0 bg-gradient-to-b from-indigo-500/5 to-transparent"
        >
        </div>
    </div>
</section>

<style>
    @theme {
        --animate-fade-in-up: fade-in-up 1s ease-out forwards;
        --animate-slide-up: slide-up 0.8s ease-out forwards;
        --animate-underline: underline 1s ease-out forwards;

        @keyframes fade-in-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes underline {
            from {
                width: 0;
            }
            to {
                width: 100%;
            }
        }
    }

    .animate-underline {
        position: relative;
        &::after {
            content: "";
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: linear-gradient(to right, #818cf8, #6366f1);
            animation: underline 1s ease-out forwards;
        }
    }
</style>
