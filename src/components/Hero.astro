---
import GitHub from "./icons/GitHub.astro";
import LinkedIn from "./icons/LinkedIn.astro";
import Laptop from "./icons/Laptop.astro";
import File from "./icons/File.astro";
---

<section class="w-full px-8 text-pretty flex gap-8 py-12 flex-col h-fit">
    <h1 class="text-6xl max-w-xl">
        Hola,
        <span class="text-gray-400"> mi nombre es</span>
        <span
            class="bg-gradient-to-b from-blue-400 to-blue-800 bg-clip-text text-transparent font-semibold"
            >Tobias Onandia</span
        >
    </h1>
    <p class="text-4xl">
        Desarrolador web
        <span class="text-gray-400"> especializado en </span>
    </p>
    <article class="flex items-end gap-4">
        <span
            class="bg-gradient-to-b text-4xl from-blue-400 to-blue-600 bg-clip-text text-transparent"
        >
            Next.js y TypeScript
        </span>
        <p
            class="flex text-sm font-semibold items-center gap-2 w-fit rounded-full py-2 text-green-300"
        >
            <span class="relative flex h-3 w-3">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                ></span>
                <span
                    class="relative inline-flex rounded-full h-3 w-3 bg-green-500"
                ></span>
            </span>
            Disponible para trabajar
        </p>
    </article>
    <footer class="flex gap-4">
        <a
            href="#projects"
            class="flex items-center gap-2 font-semibold text-sm hover:text-blue-400 text-sm"
        >
            <Laptop />
            Projectos
        </a>
        <a
            href="https://www.linkedin.com/in/tobi-onandia-b89396252/"
            class="flex items-center gap-2 font-semibold text-sm hover:text-blue-400"
        >
            <LinkedIn />
            Linkedin
        </a>
        <a
            href="https://github.com/TobiasOnandia"
            class="flex items-center gap-2 font-semibold text-sm hover:text-blue-400"
        >
            <GitHub />
            GitHub
        </a>
        <a
            href="https://github.com/TobiasOnandia"
            class="flex items-center gap-2 font-semibold text-sm hover:text-blue-400"
        >
            <File />
            CV
        </a>
    </footer>
</section>
