---
import LinkedIn from "../components/icons/LinkedIn.astro";
import GitHub from "../components/icons/GitHub.astro";
---

<section
    class="px-4 grid bg-transparent grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 relative"
>
    {/* Tech Stack Expandido */}
    <article
        class="bg-white/5 p-8 col-span-2 rounded-xl backdrop-blur-lg border border-white/10 shadow-2xl hover:shadow-lg transition-shadow"
    >
        <h2
            class="text-2xl font-bold mb-6 text-indigo-400 flex items-center gap-3"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25"
                ></path>
            </svg>
            Tech Stack Principal
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            {/* Frontend */}
            <div class="flex gap-3">
                <div class="p-2 flex items-center bg-indigo-500/10 rounded-lg">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-indigo-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            d="M5 12l-2-2l2-2m10.5 4H4m10 6l2-2l-2-2M4 12h16.5"
                        ></path><circle cx="12" cy="12" r="3"></circle>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-indigo-300 mb-1">Frontend</h3>
                    <p class="text-gray-300">
                        Next.js, React.js, TypeScript, Tailwind CSS,<br />
                        Shadcn/ui, Redux Toolkit, Framer Motion
                    </p>
                </div>
            </div>

            {/* Backend */}
            <div class="flex gap-3">
                <div class="p-2 flex items-center bg-indigo-500/10 rounded-lg">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-indigo-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            d="M20 20H4V8l7 5 7-5v12zM12 3L2 8l10 5 10-5-10-5z"
                        ></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-indigo-300 mb-1">Backend</h3>
                    <p class="text-gray-300">
                        Node.js, Express, Next.js API Routes,<br />
                        Supabase, Firebase Functions
                    </p>
                </div>
            </div>

            {/* Databases */}
            <div class="flex gap-3">
                <div class="p-2 flex items-center bg-indigo-500/10 rounded-lg">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-indigo-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path d="M12 3v18M3 6h18M3 12h18M3 18h18"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-indigo-300 mb-1">
                        Bases de Datos
                    </h3>
                    <p class="text-gray-300">
                        PostgreSQL, Firebase Firestore,<br />
                        Supabase Realtime, Redis
                    </p>
                </div>
            </div>

            {/* DevOps */}
            <div class="flex gap-3">
                <div class="p-2 flex items-center bg-indigo-500/10 rounded-lg">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6 text-indigo-400"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                    >
                        <path
                            d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"
                        ></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-semibold text-indigo-300 mb-1">DevOps</h3>
                    <p class="text-gray-300">
                        Vercel, Netlify, GitHub Actions,<br />
                        Docker, CI/CD Pipelines
                    </p>
                </div>
            </div>
        </div>
    </article>

    {/* Proyectos Destacados Mejorados */}
    <div
        class="p-8 rounded-xl bg-gradient-to-br from-indigo-500/20 to-purple-500/20 border border-white/10 backdrop-blur-lg hover:shadow-lg transition-shadow"
    >
        <h2
            class="text-xs font-semibold rounded-full bg-indigo-400 text-white w-fit px-4 py-2 mb-6 flex items-center gap-2 uppercase tracking-wide"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                ></path>
            </svg>
            Proyectos Destacados
        </h2>
        <ul class="space-y-4">
            <li class="group relative pl-4 hover:pl-6 transition-all">
                <div
                    class="absolute left-0 top-3 w-2 h-2 bg-indigo-400 rounded-full"
                >
                </div>
                <div class="border-l-2 border-indigo-400/20 pl-4">
                    <h3
                        class="font-medium text-gray-100 group-hover:text-indigo-300 transition-colors"
                    >
                        Sistema de Agendas Médicas
                    </h3>
                    <p class="text-gray-400 text-sm mb-2">
                        Plataforma completa para gestión de turnos con
                        integración WhatsApp
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <span class="tech-badge">Next.js</span>
                        <span class="tech-badge">Supabase</span>
                        <span class="tech-badge">TypeScript</span>
                        <span class="tech-badge">Mercado Pago</span>
                    </div>
                    <div class="mt-2 flex gap-3">
                        <a
                            href="#"
                            class="text-indigo-400 text-sm hover:underline"
                            >Demo →</a
                        >
                        <a
                            href="#"
                            class="text-gray-400 text-sm hover:underline"
                            >Código</a
                        >
                    </div>
                </div>
            </li>

            <li class="group relative pl-4 hover:pl-6 transition-all">
                <div
                    class="absolute left-0 top-3 w-2 h-2 bg-indigo-400 rounded-full"
                >
                </div>
                <div class="border-l-2 border-indigo-400/20 pl-4">
                    <h3
                        class="font-medium text-gray-100 group-hover:text-indigo-300 transition-colors"
                    >
                        Sistema de Facturación AFIP
                    </h3>
                    <p class="text-gray-400 text-sm mb-2">
                        Integración con Facturante y API de AFIP para
                        facturación electrónica
                    </p>
                    <div class="flex flex-wrap gap-2">
                        <span class="tech-badge">Node.js</span>
                        <span class="tech-badge">React</span>
                        <span class="tech-badge">PostgreSQL</span>
                        <span class="tech-badge">JWT</span>
                    </div>
                    <div class="mt-2 flex gap-3">
                        <a
                            href="#"
                            class="text-indigo-400 text-sm hover:underline"
                            >Caso de Estudio →</a
                        >
                    </div>
                </div>
            </li>
        </ul>
    </div>

    {/* Habilidades Complementarias */}
    <div
        class="p-8 rounded-xl bg-white/5 border border-white/10 backdrop-blur-lg md:col-span-2 lg:col-span-3 hover:shadow-lg transition-shadow"
    >
        <h2
            class="text-2xl font-bold mb-6 text-emerald-400 flex items-center gap-3"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-8 w-8"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                fill="none"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M4.5 12.75l6 6 9-13.5"></path>
            </svg>
            Habilidades Complementarias
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div
                class="p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-colors"
            >
                <h3 class="text-emerald-400 font-medium mb-2">
                    Integración de APIs
                </h3>
                <p class="text-gray-300 text-sm">
                    WhatsApp Business, Mercado Pago,<br />
                    SendGrid, Facturante, AFIP
                </p>
            </div>

            <div
                class="p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-colors"
            >
                <h3 class="text-emerald-400 font-medium mb-2">Testing</h3>
                <p class="text-gray-300 text-sm">
                    Vitest, React Testing Library,<br />
                    End-to-End Testing
                </p>
            </div>

            <div
                class="p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-colors"
            >
                <h3 class="text-emerald-400 font-medium mb-2">
                    Gestión de Estado
                </h3>
                <p class="text-gray-300 text-sm">
                    Context API, Redux Toolkit,<br />
                    Zustand, React Query
                </p>
            </div>

            <div
                class="p-4 bg-white/5 rounded-lg hover:bg-white/10 transition-colors"
            >
                <h3 class="text-emerald-400 font-medium mb-2">
                    Diseño Responsivo
                </h3>
                <p class="text-gray-300 text-sm">
                    Mobile-First, Tailwind CSS,<br />
                    Framer Motion, Figma
                </p>
            </div>
        </div>
    </div>

    {/* Soft Skills */}
    <div
        class="p-8 rounded-xl bg-white/5 border border-white/10 backdrop-blur-lg hover:shadow-lg transition-shadow"
    >
        <h2
            class="text-xl font-bold mb-6 text-cyan-400 flex items-center gap-3"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                viewBox="0 0 24 24"
                stroke-width="2"
                stroke="currentColor"
                fill="none"
            >
                <path
                    d="M12 2v4m0 12v4M4 12H2m20 0h-2m-2 7l-2-2m0-10L12 5m7 7a7 7 0 11-14 0 7 7 0 0114 0z"
                ></path>
            </svg>
            Soft Skills
        </h2>
        <div class="grid grid-cols-2 gap-4">
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                <span class="text-gray-300 text-sm"
                    >Resolución de Problemas</span
                >
            </div>
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                <span class="text-gray-300 text-sm">Comunicación Efectiva</span>
            </div>
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                <span class="text-gray-300 text-sm">Gestión del Tiempo</span>
            </div>
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
                <span class="text-gray-300 text-sm">Aprendizaje Continuo</span>
            </div>
        </div>
    </div>
</section>

